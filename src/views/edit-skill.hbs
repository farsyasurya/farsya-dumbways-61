<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Skill</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Edit Skill</h4>
        </div>
        <div class="card-body">
          <form
            action="/admin/skill/edit/{{skill.id}}"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="nameSkill" class="form-label">Nama Skill</label>
              <input
                type="text"
                name="nameSkill"
                id="nameSkill"
                value="{{skill.name}}"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3">
              <label for="image_skill" class="form-label">Gambar (opsional)</label><br
              />
              <img
                src="/assets/uploads/{{skill.image_skill}}"
                alt="{{skill.name}}"
                width="80"
                class="img-thumbnail mb-2"
              /><br />
              <input
                type="file"
                name="image_skill"
                id="image_skill"
                class="form-control"
              />
            </div>

            <div class="d-flex justify-content-between">
              <a href="/admin" class="btn btn-secondary">‚Üê Kembali</a>
              <button type="submit" class="btn btn-success">Update Skill</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>