<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Work</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Edit Work Experience</h4>
        </div>
        <div class="card-body">
          <form
            action="/admin/work/edit/{{work.id}}"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label class="form-label">Pekerjaan</label>
              <input
                type="text"
                name="work"
                value="{{work.work}}"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Perusahaan</label>
              <input
                type="text"
                name="company"
                value="{{work.company}}"
                class="form-control"
                required
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Deskripsi Tugas</label>
              <input
                type="text"
                name="list_one"
                value="{{work.list_one}}"
                class="form-control mb-2"
              />
              <input
                type="text"
                name="list_two"
                value="{{work.list_two}}"
                class="form-control mb-2"
              />
              <input
                type="text"
                name="list_three"
                value="{{work.list_three}}"
                class="form-control mb-2"
              />
              <input
                type="text"
                name="list_four"
                value="{{work.list_four}}"
                class="form-control"
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Teknologi yang Digunakan</label>
              <input
                type="text"
                name="tech_one"
                value="{{work.tech_one}}"
                class="form-control mb-2"
              />
              <input
                type="text"
                name="tech_two"
                value="{{work.tech_two}}"
                class="form-control mb-2"
              />
              <input
                type="text"
                name="tech_three"
                value="{{work.tech_three}}"
                class="form-control mb-2"
              />
              <input
                type="text"
                name="tech_four"
                value="{{work.tech_four}}"
                class="form-control"
              />
            </div>

            <div class="mb-3">
              <label class="form-label">Gambar (opsional)</label><br />
              <img
                src="/assets/uploads/{{work.image}}"
                alt="Gambar kerja"
                width="100"
                class="img-thumbnail mb-2"
              /><br />
              <input type="file" name="image_work" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
              <a href="/admin" class="btn btn-secondary">‚Üê Kembali</a>
              <button type="submit" class="btn btn-success">Update Work</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>